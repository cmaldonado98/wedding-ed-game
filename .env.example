# Environment Variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_PROJECT_ID=your-supabase-project-id

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret

# Payphone Configuration (REQUIRED for Crowdfunding Gift Registry)
PAYPHONE_TOKEN=your-payphone-token
PAYPHONE_STORE_ID=your-payphone-store-id
PAYPHONE_API_URL=https://pay.payphonetodoesposible.com

# Google Gemini AI (REQUIRED for Bank Transfer Validation)
GEMINI_API_KEY=your-gemini-api-key

# Bank Account Information for Transfer Validation
# Ecuador Account
BANK_ACCOUNT_EC_NAME=Account Holder Name
BANK_ACCOUNT_EC_NUMBER=Account Number
BANK_ACCOUNT_EC_TYPE=Account Type
BANK_ACCOUNT_EC_ID=ID Number

# Mexico Account (Tarjeta)
BANK_ACCOUNT_MX_NAME=Cardholder Name
BANK_ACCOUNT_MX_CARD=Card Number

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# SSL Configuration (only for local dev with self-signed certs)
NODE_TLS_REJECT_UNAUTHORIZED=0

# Feature Flags
NEXT_PUBLIC_WALLET_ENABLED=true
NEXT_PUBLIC_SHOP_ENABLED=true
NEXT_PUBLIC_QR_ENABLED=true

